<div class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-half">
				<h1 class="title">Tell us a secret</h1>
				<%= simple_form_for(@post) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :secret, label: "Secret", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Tell us a secret...", autofocus: true %>
            </div>
          </div>
          <%= f.button :submit, class: "button is-info" %>
        <% end %>
			</div>
		</div>
	</div>
</div>

<nav class="navbar is-fixed-bottom">
	<div class="navbar-menu">
		<div class="navbar-item">
			<div class="field is-grouped">
				<p class="control">
					<%= link_to 'Cancel', posts_path, class: "button is-dark" %>
				</p>
		</div>
	</div>
</nav>